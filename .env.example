# WPPConnect Server - Environment Variables Example
# Copy this file to .env and configure your values

# ==============================================
# BASIC SERVER CONFIGURATION
# ==============================================
PORT=21465
HOST=http://localhost
SECRET_KEY=CHANGE_THIS_SECRET_KEY
DEVICE_NAME=WppConnect-Server

# ==============================================
# AUTOMATION SYSTEM CONFIGURATION
# ==============================================
# Enable/disable automation features
AUTOMATION_ENABLED=true

# MongoDB Configuration (Required for automation features)
MONGODB_URI=mongodb://localhost:27017/wppconnect_automation
# Alternative format:
# MONGODB_URI=mongodb://username:password@host:port/database
MONGODB_DATABASE=wppconnect_automation

# Queue System Configuration
QUEUE_PROCESS_INTERVAL=5000
QUEUE_MAX_RETRIES=3
QUEUE_CLEANUP_INTERVAL=86400000

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# ==============================================
# MULTI-CHANNEL CONFIGURATION (Optional)
# ==============================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Instagram Business API Configuration
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_PAGE_ID=your_instagram_page_id
INSTAGRAM_VERIFY_TOKEN=your_custom_verify_token

# SMS Configuration (Twilio)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (SMTP)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com

# ==============================================
# EXISTING WPPCONNECT CONFIGURATION
# ==============================================

# Session Configuration
START_ALL_SESSION=true
TOKEN_STORE_TYPE=file
MAX_LISTENERS=15
USER_DATA_DIR=./userDataDir/

# Webhook Configuration
WEBHOOK_URL=
WEBHOOK_AUTO_DOWNLOAD=true
WEBHOOK_UPLOAD_S3=false
WEBHOOK_READ_MESSAGE=true
WEBHOOK_ALL_UNREAD_ON_START=false
WEBHOOK_LISTEN_ACKS=true
WEBHOOK_ON_PRESENCE_CHANGED=true
WEBHOOK_ON_PARTICIPANTS_CHANGED=true
WEBHOOK_ON_REACTION_MESSAGE=true
WEBHOOK_ON_POLL_RESPONSE=true
WEBHOOK_ON_REVOKED_MESSAGE=true
WEBHOOK_ON_LABEL_UPDATED=true
WEBHOOK_ON_SELF_MESSAGE=false
WEBHOOK_IGNORE=status@broadcast

# WebSocket Configuration
WEBSOCKET_AUTO_DOWNLOAD=false
WEBSOCKET_UPLOAD_S3=false

# ChatWoot Configuration
CHATWOOT_SEND_QR_CODE=true
CHATWOOT_SEND_STATUS=true

# Archive Configuration
ARCHIVE_ENABLE=false
ARCHIVE_WAIT_TIME=10
ARCHIVE_DAYS_TO_ARCHIVE=45

# Logging Configuration
LOG_LEVEL=info
LOG_LOGGER=console,file

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB (for tokens - existing)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_COLLECTION=
MONGO_IS_REMOTE=false
MONGO_URL_REMOTE=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=docker

# ==============================================
# AWS S3 CONFIGURATION
# ==============================================
AWS_S3_REGION=sa-east-1
AWS_S3_ACCESS_KEY_ID=
AWS_S3_SECRET_KEY=
AWS_S3_DEFAULT_BUCKET_NAME=
AWS_S3_ENDPOINT=
AWS_S3_FORCE_PATH_STYLE=false

# ==============================================
# ADDITIONAL AUTOMATION FEATURES
# ==============================================

# Rate Limiting (messages per minute)
RATE_LIMIT_MESSAGES_PER_MINUTE=30

# Template Variables
COMPANY_NAME=Sua Empresa
SUPPORT_PHONE=+55 11 99999-9999
WEBSITE=https://suaempresa.com

# Security
WEBHOOK_SECRET=your_webhook_secret_for_verification

# Development/Debug
NODE_ENV=production
DEBUG_AUTOMATION=false